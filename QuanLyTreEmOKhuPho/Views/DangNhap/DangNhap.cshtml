@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/DangNhap.css")" />

    <title>Đăng Nhập - Hệ Thống Quản Lý Trẻ Em Khu Phố</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #2563eb;
            --primary-dark: #1e40af;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

    </style>
</head>
<body>
    <div class="login-container">
        <!-- Header -->
        <div class="login-header">
            <div class="logo-box">
                <div class="logo-icon"><i class="fa-solid fa-person-breastfeeding"></i></div>
            </div>
            <h1>Hệ Thống Quản Lý Trẻ Em</h1>
            <p>Đăng nhập để tiếp tục</p>
        </div>
        <!-- Login Card -->
        <div class="login-card">
            <!-- Error Message -->
            <!-- Login Form -->
            @using (Html.BeginForm("DangNhap", "DangNhap", FormMethod.Post))
            {
                <!-- Username -->
                <div class="form-group">
                    <label class="form-label">Tên đăng nhập (Số điện thoại)</label>
                    <div class="input-wrapper">
                        <span class="input-icon"><i class="fa-solid fa-user"></i></span>
                        @Html.TextBox("tk", null, new
                        {
                            @class = "form-input",
                            placeholder = "Nhập số điện thoại",
                            autocomplete = "username"
                        })
                    </div>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label class="form-label">Mật khẩu</label>
                    <div class="input-wrapper">
                        <span class="input-icon"><i class="fa-solid fa-lock"></i></span>
                        @Html.Password("mk", null, new
                        {
                            @class = "form-input",
                            placeholder = "Nhập mật khẩu",
                            autocomplete = "current-password",
                            id = "password"
                        })
                        <button type="button" class="password-toggle" id="togglePassword">
                            <i class="fa-solid fa-eye"></i>
                        </button>
                    </div>
                </div>

                <!-- Options -->
                <div class="form-options">
                    <label class="remember-me">
                        <input type="checkbox" id="rememberMe" />
                        <span>Ghi nhớ đăng nhập</span>
                    </label>
                    <a href="#" class="forgot-password">Quên mật khẩu?</a>
                </div>
                if (ViewBag.ThongBao != null)
                {
                    <div class="error-message" id="errorMessage" style="display:block;">
                        <i class="fa-solid fa-triangle-exclamation"></i>
                        <span id="errorText">@ViewBag.ThongBao</span>
                    </div>
                }
                <!-- Login Button -->
                <button type="submit" class="btn-login">
                    Đăng nhập
                </button>
            }

        </div>
    </div>
</body>
</html>